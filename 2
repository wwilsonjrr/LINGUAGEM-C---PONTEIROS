/*
2. Escreva um programa que contenha duas variáveis inteiras.
   Compare seus endereços e exiba o maior endereço.

   int* -> endereço que aponta para um int

   &A -> pega o endereço de A

   ptrA -> já contém o endereço

   *ptrA -> acessa o valor que esta no endereço de ptrA

   int *maior = maiorEndereco(ptrA, ptrB);; -> acessa o valor que está guardado naquele endereço
                                            -> se maior == &A, então *maior == A
                                            -> se maior == &B, então *maior == B

   printf("\nMaior endereco: %p\n", (void*)maior); -> maior é do tipo int*, mas quando usa %p, ele espera void*

*/

#include <stdio.h>
#include <stdlib.h>

// -----------------------------------------------------------------------------
// Protótipos das funções
// -----------------------------------------------------------------------------
void imprimeEnderecos(int *ptrA, int *ptrB);
int* maiorEndereco(int *ptrA, int *ptrB);

// -----------------------------------------------------------------------------
// Função principal
// -----------------------------------------------------------------------------
int main(void)
{
    int A = 10;
    int B = 20;

    int *ptrA = &A;  // ponteiro recebe endereço de A
    int *ptrB = &B;  // ponteiro recebe endereço de B

    imprimeEnderecos(ptrA, ptrB);

    // Recebe o ponteiro para o maior endereço
    int *maior = maiorEndereco(ptrA, ptrB);

    printf("\nMaior endereco: %p\n", (void*)maior);

    system("pause");
    return 0;
}

// -----------------------------------------------------------------------------
// Função que imprime os endereços das variáveis
// -----------------------------------------------------------------------------
void imprimeEnderecos(int *ptrA, int *ptrB)
{
    printf("Endereco de A: %p\n", (void*)ptrA);
    printf("Endereco de B: %p\n", (void*)ptrB);
}

// -----------------------------------------------------------------------------
// Função que retorna o ponteiro com maior endereço
// -----------------------------------------------------------------------------
int* maiorEndereco(int *ptrA, int *ptrB)
{
    if (ptrA > ptrB)
        return ptrA;
    else
        return ptrB;
}
